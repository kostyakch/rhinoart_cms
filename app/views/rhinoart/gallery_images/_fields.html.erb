<%= render 'shared/error_messages', object: f.object %>

<div class="form-horizontal">
    <%= f.hidden_field :path_cache %>

    <div class="control-group">
        <div class="controls">
            <div class="uploader" id="uniform-fileInput">
                <%= f.file_field :path, class: 'input-file uniform_on' %>
                <span class="filename">No file selected</span>
                <span class="action"><%= t(:add_image) %></span>
            </div> 
        </div>
    </div>      
 
            
    <div class="control-group">
        <%= f.label :annotation, class: 'control-label' %>
        <div class="controls">
            <%= f.text_area :annotation, class: 'span11', rows: 4 %>
        </div>
    </div>  

    <div class="row">
        <div class="span1" style="margin-left: 210px;">
            <%= f.label :position %>
            <%= f.number_field :position, class: 'span12' %>
        </div>

        <div class="span2">
            <%= f.label :gallery_id %>
            <%= f.collection_select :gallery_id, Gallery.all, :id, :name, {include_blank: true}, {class: 'span11'} %>
        </div>

        <div class="span2">
            <%= f.label :main %>
            <%= f.check_box :main %>
        </div>

        <div class="span2">
            <%= f.label :active %>
            <%= f.check_box :active %>
        </div>
    </div>

    <br>
    <div class="control-group">
        <div class="controls">
            <%= image_tag(f.object.path.thumb.url, width: '120') if f.object.path.thumb.url.present? %>
        </div>
    </div>    

    <div class="form-actions">
        <div class="btn-overlay">
            <%= f.button t("_BTN_SAVE"), class: "btn btn-primary" %>
            <%= link_to t("_BTN_CANCEL"), admin_galleries_path, class: "btn" %>
        </div>
    </div>
</div>
